{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwriter": {
      "type": "local",
      "command": ["npx", "-y", "playwriter@latest"],
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-115c60af-93d5-45a7-b261-5a2f48a3b1ca"
      },
      "enabled": true
    },
    "nia": {
      "type": "remote",
      "url": "https://apigcp.trynia.ai/mcp",
      "headers": {
        "Authorization": "Bearer nk_DjdmYgJFoapbEFHY5z6p6u33LOwk3NAU"
      },
      "enabled": false
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    }
  },
  "instructions": [
    "apps/*/AGENTS.md",
    "apps/*/src/**/AGENTS.md",
    "packages/*/AGENTS.md",
    "AGENTS.md"
  ],
  "formatter": {
    "prettier": {
      "command": ["bunx", "prettier", "--write", "$FILE"],
      "environment": {
        "NODE_ENV": "development"
      },
      "extensions": [".js", ".ts", ".jsx", ".tsx"]
    }
  },
  "permission": {
    "external_directory": {
      "~/Github/**": "allow"
    }
  }
}
